<h1 class="edit-form-title">Adding Employee</h1>
<form class="edit-form" action="/admin/adding-Employee" method="POST" required>
  <div class="form-group">
    <label class="form-label" for="name">Name:</label>
    <input class="form-input1" type="text" name="name" required>
  </div>

  <div class="form-group">
    <label class="form-label" for="email">Email:</label>
    <input class="form-input1" type="email" name="email" required>
  </div>

  <div class="form-group">
    <label class="form-label" for="performance">Performance:</label>
    <input class="form-input1" type="text" name="performance" required>
  </div>

  <div class="form-group">
    <label class="form-label" for="roles">Roles:</label>
    <select name="roles" class="form-input1" required>
      <option value="">Select Role</option>
      <option value="admin">Admin</option>
      <option value="employee">Employee</option>
    </select>
  </div>

  <div class="form-group">
    <label class="form-label" for="reviews">Reviews</label>
    <input class="form-input1" type="text" name="reviews" required>
  </div>

  <div class="form-group">
    <label class="form-label" for="password">Password</label>
    <input class="form-input1" type="password" name="password" required>
  </div>

  <div class="form-group">
    <label class="form-label" for="confirm_password">Confirm Password</label>
    <input class="form-input1" type="password" name="confirm_password" required>
  </div>

  <!-- Hidden input field for employee ID -->
  <input type="hidden" name="employee" value="employee_id">

  <!-- Hidden input field for admin-specific data -->
  <input type="hidden" name="adminField" value="some value">

  <!-- Submit button -->
  <button class="form-submit" type="submit">Add</button>
</form>
