<!-- editEmployee.ejs -->
<!DOCTYPE html>
<html>
<head>
  <title>Edit Employee</title>
</head>
<body>
  <h1>Edit Employee</h1>
  <form action="/admin/editEmployee/<%= employees._id %>" method="POST">
    <label for="name">Name:</label>
    <input type="text" name="name" value="<%= employees.name %>" required><br>

    <label for="email">Email:</label>
    <input type="email" name="email" value="<%= employees.email %>" required><br>

    <label for="performance">Performance:</label>
    <input type="text" name="performance" value="<%= employees.performance %>" required><br>

    <label for="roles">Roles:</label>
    <input type="text" name="roles" value="<%= employees.roles %>" required><br>

    <button type="submit">Save</button>
  </form>
</body>
</html>
